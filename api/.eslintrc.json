{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "semi": [
            "error",
            "always"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "no-useless-return": "warn",
        "arrow-parens": "off",
        "camelcase": "error",
        "capitalized-comments": "error",
        "indent": "error",
        "linebreak-style": "off",
        "import/prefer-default-export": "off",
        "import/no-unresolved": "off",
        "spaced-comment": "off",
        "import/extensions": [
            "off",
            {
                "ts": "never"
            }
        ]
    }
}